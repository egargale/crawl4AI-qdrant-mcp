# FastMCP RAG System Environment Configuration
# Copy this file to .env and fill in your actual values

# Server Configuration
SERVER_NAME=Enhanced Semantic Search RAG
HOST=0.0.0.0
PORT=8000
TRANSPORT=http
DEBUG=false

# Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=  # Optional for local Qdrant
QDRANT_TIMEOUT=30

# Embedding Configuration
EMBEDDING_METHOD=sentence-transformers  # sentence-transformers, dashscope, openai
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384
EMBEDDING_BATCH_SIZE=32

# DashScope Configuration (if using)
DASHSCOPE_API_KEY=your_dashscope_api_key_here
DASHSCOPE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# OpenAI Configuration (if using)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1

# LLM Configuration for Q&A
LLM_PROVIDER=dashscope  # dashscope, openai
LLM_MODEL=qwen-turbo
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Search Configuration
DEFAULT_TOP_K=5
DEFAULT_SIMILARITY_THRESHOLD=0.5
ENABLE_HYBRID_SEARCH=true
ENABLE_DIVERSITY_RANKING=true
ENABLE_QUERY_EXPANSION=true

# Document Processing Configuration
DEFAULT_CHUNK_SIZE=1000
DEFAULT_CHUNK_OVERLAP=200
ENABLE_SEMANTIC_CHUNKING=true
ENABLE_METADATA_ENRICHMENT=true
MAX_DOCUMENT_SIZE=1000000

# Authentication Configuration (Optional)
ENABLE_AUTH=false
AUTH_PROVIDER=github  # github, google, azure, auth0
GITHUB_CLIENT_ID=your_github_client_id_here
GITHUB_CLIENT_SECRET=your_github_client_secret_here
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here

# Caching Configuration
ENABLE_CACHE=true
CACHE_TTL=3600
REDIS_URL=redis://localhost:6379

# Performance Configuration
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
ENABLE_METRICS=true
METRICS_PORT=9090

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=  # Optional log file path